@model CC_SchoolProject_ASP.Models.LoginVM

@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/UserAccess/_UserAccessLayout.cshtml";
}

<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">

        <div class="login-form">
            <form asp-area="UserAccess" asp-controller="UserManager" asp-action="Login" method="post">
                <div class="form-row align-items-center">

                    <div class="col-auto">
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">@Html.DisplayNameFor(model => model.UserName)</div>
                            </div>
                            <input type="text" asp-for="UserName" id="UserName" name="UserName" value=@TempData["POSTRegUserUserName"] class="form-control" placeholder="Username" required>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-auto">
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">@Html.DisplayNameFor(model => model.Password)&nbsp;</div>
                            </div>
                            <input type="password" asp-for="password" class="form-control" id="Password" name="Password" placeholder="Password" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="text-center">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>

                </div>

            </form>
            <div class="text-center">
                <span class="loginSpan">&nbsp;</span>
                <a href="~/UserAccess/UserManager/Register">Register</a>
                <span class="loginSpan">&nbsp;</span>
                <a href="/">Back to Home</a>
            </div>
        </div>


    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
