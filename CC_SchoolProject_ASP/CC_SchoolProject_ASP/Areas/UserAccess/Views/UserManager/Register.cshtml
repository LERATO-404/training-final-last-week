@model CC_SchoolProject_ASP.Models.RegistrationVM

@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/UserAccess/_UserAccessLayout.cshtml";
}

<h1>User Registration</h1>

<hr />
<div id="registrationSuccessMessage" class="alert alert-success" style="display: none;"></div>
<div class="row">
    <div class="col-md-4">
        <form asp-area="UserAccess" asp-controller="UserManager" asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-auto">
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text">@Html.DisplayNameFor(model => model.UserName)&nbsp;</div>
                    </div>
                    <input type="text" asp-for="UserName" class="form-control" id="UserName" name="UserName" placeholder="UserName" required>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

            </div>
             <div class="col-auto">
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">@Html.DisplayNameFor(model => model.Email)&nbsp;</div>
                            </div>
                            <input type="text" asp-for="Email" class="form-control" id="Email" name="Email" placeholder="Email" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

             <div class="col-auto">
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">@Html.DisplayNameFor(model => model.Password)&nbsp;</div>
                            </div>
                            <input type="password" asp-for="password" class="form-control" id="Password" name="Password" placeholder="Password" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

            <div class="col-auto">
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text">@Html.DisplayNameFor(model => model.FirstName)&nbsp;</div>
                    </div>
                    <input type="text" asp-for="FirstName" class="form-control" id="FirstName" name="FirstName" placeholder="FirstName" required>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>


            <div class="col-auto">
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text">@Html.DisplayNameFor(model => model.LastName)&nbsp;</div>
                    </div>
                    <input type="text" asp-for="LastName" class="form-control" id="LastName" name="LastName" placeholder="LastName" required>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <span class="loginSpan">&nbsp;</span>
    <a href="~/UserAccess/UserManager/Login">Login</a>
    <span class="loginSpan">&nbsp;</span>
    <a href="/">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
