@model IEnumerable<CC_SchoolProject_ASP.ViewModels.LearnerInfoReport>

@{
    ViewData["Title"] = "GetLearnerInfo";
    Layout = "~/Areas/Principal/_PrincipalLayout.cshtml";
}

<h1>All Learner Info</h1>


<table class="table">
    <thead>
        <tr>

            <th>
                Learner FullName
            </th>
            <th>
                Guardian FullName
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Relationship)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th>
                Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)  @Html.DisplayFor(modelItem => item.LastName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.GuardianFirstName) @Html.DisplayFor(modelItem => item.GuardianLastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Relationship)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressLine)  @Html.DisplayFor(modelItem => item.Suburb) @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
               
            </tr>
        }
    </tbody>
</table>


<div class="col text-end">
    <br />
    <button type="button" class="btn btn-maroon" onclick="window.location.href='@Url.Action("Index", "Principal")'">Go Back</button>
    <br />
</div>